	<!-- ======================= 페이징 ======================= -->

	<!-- 전체 공지 개수 -->
	<select id="getAllCount" resultType="int">
		SELECT COUNT(*) FROM inquiry
	</select>

	<!-- 공지 전체 목록 -->
	<select id="getPageList" resultType="InquiryDTO">
		SELECT * FROM inquiry ORDER BY inquiryId DESC LIMIT #{startRow}, #{pageSize}
	</select>
</mapper>